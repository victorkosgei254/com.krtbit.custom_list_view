<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
    xmlns:tools="http://schemas.android.com/tools"
    >
    <ImageView
        android:layout_width="72sp"
        android:layout_height="72sp"
        android:layout_margin="10sp"
        android:id="@+id/lang_icon"
        tools:src="@drawable/ic_java"

        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/header"
        android:orientation="vertical">
         <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lang_title"
            android:text="Language name"
            android:layout_marginTop="10sp"
        />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lang_usage"
            android:text="Websites, backend technologies, mobile apps, scripting"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Read More"
            android:background="@null"
            android:textColor="#112A46"
            />


    </LinearLayout>

</LinearLayout>